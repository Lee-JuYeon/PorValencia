<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 내부 색상 -->
    <solid android:color="?attr/systemGray" />

    <!-- 테두리 설정 -->
    <stroke
        android:width="2dp"
        android:color="@android:color/black" />

    <!-- 완전 둥근 모서리 (원형 형태를 만들기 위해) -->
    <corners android:radius="50dp" />

    <!-- 패딩 설정 -->
    <padding
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp" />
</shape>
